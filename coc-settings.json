{
    "diagnostic.enable": false,
    "python.linting.enabled": true,
    "python.jediEnabled": false,
    "languageserver": {
        "python": {
            "command": "python",
            "args": [
              "-mpyls",
              "-vv",
              "--log-file",
              "/tmp/lsp_python.log"
            ],
            "trace.server": "verbose",
            "filetypes": [
              "python"
            ],
            "settings": {
                "pyls": {
                    "enable": true,
                    "trace": {
                      "server": "verbose"
                    }
                }
            }
        }
    }
}
